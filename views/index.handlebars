<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{msg}}</h1>
        <h2>This is our Home Page!</h2>
        <form class="clearfix border p-4 mb-4" action="POST">
          <h3 class="">Add New Track!</h3>
          <div class="form-group">
            <label for="track-title">Track Title</label>
            <input type="text" id="track-title" class="form-control" aria-describedby="track-title"
              placeholder="Enter Track Title">
          </div>
          <div class="form-group">
            <label for="track-description">Track Description</label>
            <textarea class="form-control" id="track-description" aria-describedby="track-description"
              placeholder="Enter Track Description"></textarea>
          </div>
          <div class="form-group">
            <label for="track-instrument">Track Instrument</label>
            <textarea class="form-control" id="track-instrument" aria-describedby="track-instrument"
              placeholder="Enter Track Instrument"></textarea>
          </div>
          <div class="form-group">
            <label for="track-length">Track length</label>
            <textarea class="form-control" id="track-length" aria-describedby="track-length"
              placeholder="Enter Track length"></textarea>
          </div>
          <div class="form-group">
            <label for="track-genre">Track genre</label>
            <textarea class="form-control" id="track-genre" aria-describedby="track-genre"
              placeholder="Enter Track genre"></textarea>
          </div>
          <div class="form-group">
            <label for="track-bpm">Track bpm</label>
            <textarea class="form-control" id="track-bpm" aria-describedby="track-bpm"
              placeholder="Enter Track bpm"></textarea>
          </div>
          <div class="form-group">
            <label for="track-key-signature">Track key-signature</label>
            <textarea class="form-control" id="track-key-signature" aria-describedby="track-key-signature"
              placeholder="Enter Track key-signature"></textarea>
          </div>
          <div class="form-group">
            <label for="track-time-signature">Track time-signature</label>
            <textarea class="form-control" id="track-time-signature" aria-describedby="track-time-signature"
              placeholder="Enter Track time-signature"></textarea>
          </div>
          <div class="form-group">
            <label for="track-sound-file">Track sound-file</label>
            <textarea class="form-control" id="track-sound-file" aria-describedby="track-sound-file"
              placeholder="Enter Track sound-file"></textarea>
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
        <h3>Tracks:</h3>
        <ul id="example-list" class="list-group">
          {{#each tracks}}
          <li data-id="{{this.dataValues.id}}" class="list-group-item">
            Title:<a href="track/{{this.dataValues.id}}"> {{this.dataValues.title}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>